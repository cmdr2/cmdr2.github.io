{{- $p := .Site.RegularPages -}}
{{- $updated := (index ($p.ByLastmod.Reverse) 0).Lastmod | default now -}}
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ .Site.Title }}</title>
  <id>{{ .Site.BaseURL }}</id>
  <updated>{{ $updated.Format "2006-01-02T15:04:05Z07:00" }}</updated>
  <link href="{{ .Site.BaseURL }}atom.xml" rel="self" />
  {{ range first 20 ($p.ByDate.Reverse) }}
  <entry>
    <title>{{ .Title }}</title>
    <link href="{{ .Permalink }}" />
    <id>{{ .Permalink }}</id>
    <updated>{{ .Lastmod.Format "2006-01-02T15:04:05Z07:00" }}</updated>
    <summary type="html">{{ .Summary | plainify | html }}</summary>
    <content type="html">{{ .Content | safeHTML }}</content>
  </entry>
  {{ end }}
</feed>
